menu "Wi-Fi Configuration"
    choice WIFI_MODE
        prompt "Wi-Fi Connection Mode"
        default WIFI_MODE_WPA2
        help
            Choose between regular WPA2 or eduroam WPA2 Enterprise.

        config WIFI_MODE_WPA2
            bool "Regular WPA2"
        config WIFI_MODE_EDUROAM
            bool "eduroam (WPA2 Enterprise)"
    endchoice

    config WIFI_SSID
        string "Wi-Fi SSID"
        default "your_wifi_ssid"
        help
            SSID (network name) for the Wi-Fi connection.

    config WIFI_PASSWORD
        string "Wi-Fi Password"
        default "your_wifi_password"
        help
            Wi-Fi password (WPA or WPA2) for the Wi-Fi connection.
            Not used for eduroam.

    config EDUROAM_IDENTITY
        string "eduroam Identity"
        default "your-email@university.edu"
        depends on WIFI_MODE_EDUROAM
        help
            eduroam identity (usually your university email).

    config EDUROAM_USERNAME
        string "eduroam Username"
        default "your-email@university.edu"
        depends on WIFI_MODE_EDUROAM
        help
            eduroam username (usually your university email).

    config EDUROAM_PASSWORD
        string "eduroam Password"
        default "xxxxxxx"
        depends on WIFI_MODE_EDUROAM
        help
            eduroam password.
endmenu

